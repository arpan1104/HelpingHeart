<% layout("/layouts/boilerplate") %>

<h1 class="col-6 offset-3 mt-3">Signup on Wanderlust</h1>
<div class="row mt-3 mb-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <!-- Username Field -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Contact Number Field -->
            <div class="mb-3">
                <label for="contactNumber" class="form-label">Contact Number</label>
                <input type="text" name="contactNumber" id="contactNumber" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Skills Field (Dropdown) -->
            <div class="mb-3">
                <label for="skills" class="form-label">Your favourite Category</label>
                <select name="skills" id="skills" class="form-control" required>
                    <option value="" disabled selected>Select your favourite Category</option>
                    <option value="Teaching">Trending</option>
                    <option value="Field Work">Beach side</option>
                    <option value="Health Care">Pools</option>
                    <option value="Fitness Coaching">Mountains</option>
                    <option value="Others">Others</option>
                </select>
                <div class="valid-feedback">Looks Good!</div>
            </div>


            <div class="mb-3">
                <label for="img-url" class="form-label">Upload Image</label>
                <input name="image[url]" type="file" class="form-control" />
            </div>

            <!-- Location Field -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" id="location" class="form-control" placeholder="City/State" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Country Field -->
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" id="country" class="form-control" placeholder="India" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success">Signup</button>
        </form>

    </div>
</div>
